{
  "manifest_version": 2,

  "name": "FreeSMUG Chromium Version Check",
  "short_name": "Chromium Updater",
  "description": "Simple extension to check for new Chromium builds available at http://www.freesmug.org/chromium.",
  "version": "0.2.3",
  "author": "ngquerol",
  "icons": {
    "48": "images/icon.png"
  },

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "FreeSMUG Chromium Version Check"
  },

  "background": {
    "scripts": [ "background.js" ]
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [
    "background",
    "notifications",
    "alarms",
    "storage",
    "cookies",
    "https://sourceforge.net/",
    "https://omahaproxy.appspot.com/"
  ]
}
